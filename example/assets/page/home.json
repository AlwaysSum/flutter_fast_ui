{
  "data": {
    ":name": "小明",
    ":padding": 10,
    ":markdownUrl": "assets/markdown/home.md"
  },
  "config": {
    "type": "container",
    "child": {
      "type": "row",
      "children": [
        {
          "type": "container",
          "color": "#1c2834",
          "decorates": [
            {
              "type": "expand",
              "flex": 1
            }
          ],
          "child": {
            "type": "list",
            "config": {
              "type": "button",
              "text": "${text}",
              "color": "#ffffff",
              "onTap": "@{set(${:markdownUrl},${markdown})}",
              "decorates": [
                {
                  "type": "padding",
                  "padding": {
                    "vertical": 50
                  }
                }
              ]
            },
            "data": [
              {
                "type": "text",
                "text": "简介",
                "markdown": "assets/markdown/home.md"
              },
              {
                "type": "text",
                "text": "简单例子",
                "markdown": "assets/markdown/simple.md"
              },
              {
                "type": "text",
                "text": "组件",
                "markdown": "assets/markdown/widgets.md"
              },
              {
                "type": "text",
                "text": "装饰器",
                "markdown": "assets/markdown/decorates.md"
              }
            ]
          }
        },
        {
          "type": "column",
          "decorates": [
            {
              "type": "expand",
              "flex": 4
            }
          ],
          "children": [
            {
              "type": "container",
              "color": "#00ff00",
              "child": {
                "type": "text",
                "color": "#ff0000",
                "decorates": [
                  {
                    "type": "padding",
                    "padding": "${:padding}"
                  },
                  {
                    "type": "event",
                    "onTap": "@{set(${:padding},20)}"
                  },
                  {
                    "type": "onlyPC"
                  }
                ],
                "text": "第一, ${:name}"
              }
            },
            {
              "type": "container",
              "decorates": [
                {
                  "type": "padding",
                  "padding": "${:padding}"
                },
                {
                  "type": "expand"
                }
              ],
              "child": {
                "type": "markdown",
                "url": "${:markdownUrl}"
              }
            }
          ]
        }
      ]
    }
  }
}

