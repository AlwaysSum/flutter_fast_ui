{
  "data": {
    ":name": "小明",
    ":padding": 10
  },
  "config": {
    "type": "container",
    "child": {
      "type": "row",
      "children": [
        {
          "type": "list",
          "decorates": [
            {
              "type": "expand",
              "flex": 1
            }
          ],
          "config": {
            "type": "text",
            "text": "简介"
          },
          "data": [
            {
              "type": "text",
              "text": "简介"
            },
            {
              "type": "text",
              "text": "基本使用"
            },
            {
              "type": "text",
              "text": "文本"
            }
          ]
        },
        {
          "type": "column",
          "decorates": [
            {
              "type": "expand",
              "flex": 5
            }
          ],
          "children": [
            {
              "type": "container",
              "color": "#00ff00",
              "child": {
                "type": "text",
                "color": "#ff0000",
                "decorates": [
                  {
                    "type": "padding",
                    "padding": "${:padding}"
                  },
                  {
                    "type": "event",
                    "onTap": "@{set(${:padding},20)}"
                  }
                ],
                "text": "第一, ${:name}"
              }
            },
            {
              "type": "container",
              "color": "#ff0000",
              "child": {
                "type": "text",
                "color": "#ffffff",
                "decorates": [
                  {
                    "type": "padding",
                    "padding": "${:padding}"
                  },
                  {
                    "type": "event",
                    "onTap": "@{set(${:padding},20)}"
                  }
                ],
                "text": "第二： ${:name}"
              }
            }
          ]
        }
      ]
    }
  }
}

