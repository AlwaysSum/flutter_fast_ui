{
  "data": {
    ":name": "小明",
    ":padding": 10,
    ":markdownUrl": "assets/markdown/home.md"
  },
  "config": {
    "type": "container",
    "child": {
      "type": "row",
      "children": [
        {
          "type": "container",
          "color": "#0000ff",
          "decorates": [
            {
              "type": "expand",
              "flex": 1
            }
          ],
          "child": {
            "type": "list",
            "config": {
              "type": "text",
              "text": "${text}"
            },
            "data": [
              {
                "type": "text",
                "text": "简介"
              },
              {
                "type": "text",
                "text": "基本使用"
              },
              {
                "type": "text",
                "text": "文本"
              }
            ]
          }
        },
        {
          "type": "column",
          "decorates": [
            {
              "type": "expand",
              "flex": 3
            }
          ],
          "children": [
            {
              "type": "container",
              "color": "#00ff00",
              "child": {
                "type": "text",
                "color": "#ff0000",
                "decorates": [
                  {
                    "type": "padding",
                    "padding": "${:padding}"
                  },
                  {
                    "type": "event",
                    "onTap": "@{set(${:padding},20)}"
                  }
                ],
                "text": "第一, ${:name}"
              }
            },
            {
              "type": "container",
              "decorates": [
                {
                  "type": "padding",
                  "padding": "${:padding}"
                },
                {
                  "type": "expand"
                }
              ],
              "child": {
                "type": "markdown",
                "url": "${:markdownUrl}"
              }
            }
          ]
        }
      ]
    }
  }
}

